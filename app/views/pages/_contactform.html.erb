<%= bootstrap_form_for @contact do |f| %>
    
  <div class="heading-contact marginbot-50">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <h1 style="color: #346782" class="center titolone"><strong>Get in touch</strong></h1> <br/>
        </div>
      </div>
    </div>
  </div>
          
  <div class="container">

    <div class="row">

      <div class="col-lg-8 col-md-offset-2">
        <div class="boxed-grey">
          <div class="row">
            <div class="col-md-6">
                          
              <div class="form-group">
                <%= f.text_field :name, :required => true, label: "Your/Company Name", placeholder: 'Enter name' %>
              </div>
              <div class="form-group">    
                <%= f.email_field :email, :required => true, label: "Your Email Address", placeholder: 'Enter email', icon: "envelope" %>
              </div>
                      
              <div class= "hidden">
                <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
              </div>

              <div class="form-group">
                <label for="subject">Subject</label>
                <select id="subject" name="subject" class="form-control" required="required">
                  <option value="na" selected="">Choose One:</option>
                  <option value="service">General Customer Service</option>
                  <option value="suggestions">Suggestions</option>
                  <option value="product">Product Support</option>
                </select>
              </div>

            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <%= f.text_area :message, :required => true, placeholder: 'Message', control_col: "col-md-6", :input_html => {:rows => 9, :cols => 25} %>
            </div>
          </div>

          <div class="col-md-12">
            <%= f.submit "Send Message", :class=> "btn btn-primary btn-skin pull-right" %>
          </div>

        </div>
      </div> <!-- /col-lg-8 col-md-offset-2 -->
              
      <div class="widget-contact row">

        <div class="col-lg-6">
          <address>
            <strong>IWS srl</strong><br>
                    Via ...<br/>
            <abbr title="Phone">P:</abbr> (123) 456-7890
          </address>
        </div>
                  
        <div class="col-lg-6"> 
        </div>

      </div> 

    </div> <!-- /Row -->

  </div> <!-- /Container -->

<% end %>



